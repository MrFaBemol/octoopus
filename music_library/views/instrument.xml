<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="instrument_tree" model="ir.ui.view">
            <field name="name">instrument.tree</field>
            <field name="model">instrument</field>
            <field name="arch" type="xml">
                <tree string="Instruments" decoration-bf="is_category" decoration-info="is_category" default_order="sequence,display_name">
                    <field name="is_category" invisible="1"/>
                    <field name="sequence" widget="handle" />
                    <field name="display_name" />
                    <field name="key" />
                    <field name="work_version_qty" string="Works qty" />
                    <field name="is_ensemble" />
                    <field name="is_accompaniment" />
                </tree>
            </field>
        </record>

        <record id="instrument_form" model="ir.ui.view">
            <field name="name">instrument.form</field>
            <field name="model">instrument</field>
            <field name="arch" type="xml">
                <form string="Instrument">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_open_versions_list" icon="fa-copy" attrs="{'invisible': [('work_version_qty', '=', 0)]}">
                                <field name="work_version_qty" widget="statinfo" string="See works" />
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="parent_id" />
                                <field name="extra_name_ids">
                                    <tree editable="bottom">
                                        <field name="name" />
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="icon"  widget="image" class="oe_avatar oe_right" nolabel="1"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="key" />
                                <field name="is_ensemble" />
                                <field name="accompanist_qty" attrs="{'invisible': [('is_accompaniment', '!=', True)], 'required': [('is_accompaniment', '=', True)]}"/>
                            </group>
                            <group>
                                <field name="is_default" />
                                <field name="is_accompaniment" />
                            </group>

                        </group>
                        <group string="Instruments">
                            <field name="instrument_qty" string="Quantity"/>

                            <field name="all_instrument_ids" colspan="2" nolabel="1">
                                <tree editable="bottom" limit="12">
                                    <field name="name" />
                                    <field name="key" />
                                    <field name="parent_id" />
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="instrument_search" model="ir.ui.view">
            <field name="name">instrument.search</field>
            <field name="model">instrument</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" />
                    <filter string="Category" name="filter_group_by_parent_id" context="{'group_by': 'parent_id'}" />
                </search>
            </field>
        </record>


        <record id="instrument_action" model="ir.actions.act_window">
            <field name="name">Instruments</field>
            <field name="res_model">instrument</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
