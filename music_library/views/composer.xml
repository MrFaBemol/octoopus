<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="composer_tree" model="ir.ui.view">
            <field name="name">composer.tree</field>
            <field name="model">composer</field>
            <field name="arch" type="xml">
                <tree string="Composers">
                    <field name="display_name" string="Name" />
                    <field name="country_ids" widget="many2many_tags"/>
                    <field name="period_ids" widget="many2many_tags"/>
                    <field name="work_count" />
                    <field name="oo_id" />
                </tree>
            </field>
        </record>


        <record id="composer_form" model="ir.ui.view">
            <field name="name">composer.form</field>
            <field name="model">composer</field>
            <field name="arch" type="xml">
                <form string="Composer">
                    <sheet>

                        <group class="oe_read_only">
                            <group><h1> <field name="display_name" /> </h1></group>
                            <group><field name="portrait" widget="image" class="oe_avatar" nolabel="1"/></group>
                            <field name="biography_short" nolabel="1" colspan="2" attrs="{'invisible': [('biography', '=', False)]}"/>
                        </group>

                        <group class="oe_edit_only" string="Main">
                            <label for="name" string="Name" />
                            <div class="o_row">
                                <field name="name" class="oe_inline" />
                                <field name="first_name" nolabel="1" class="oe_inline" />
                            </div>
                            <label for="birth" string="Dates" />
                            <div class="o_row" modifiers="{}">
                                <field name="birth" nolabel="1" class="oe_inline" />
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow" modifiers="{}"/>
                                <field name="death" nolabel="1" class="oe_inline" />
                            </div>
                            <field name="biography"/>
                            <field name="portrait" widget="image" class="oe_avatar oe_left" />
                        </group>

                        <group string="General">
                            <group>
                                <field name="period_ids" widget="many2many_tags"/>
                                <field name="country_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="is_popular" />
                                <field name="is_essential" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Works" name="composer_works">
                                <group>
                                    <field name="work_ids" readonly="1" nolabel="1" colspan="2">
                                        <tree decoration-bf="is_popular" decoration-success="is_essential" limit="10" default_order="is_popular desc,is_essential desc">
                                            <field name="is_popular" invisible="1"/>
                                            <field name="is_essential" invisible="1"/>
                                            <field name="title" />
                                            <field name="sub_title" />
                                            <field name="nickname" />
                                            <field name="date" />
                                            <field name="oo_id" />
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            <page string="Web" name="composer_web">
                                <group>
                                    <field name="portrait_url" widget="url" />
                                    <field name="wikipedia_url" widget="url" />
                                    <field name="slug_url" widget="url" />
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" />
                        <field name="activity_ids" />
                        <field name="message_ids" />
                    </div>
                </form>
            </field>
        </record>

        <record id="composer_kanban" model="ir.ui.view">
            <field name="name">composer.kanban</field>
            <field name="model">composer</field>
            <field name="arch" type="xml">
                <kanban records_draggable="false">
                    <field name="portrait" />
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban">

                                <t t-set="placeholder" t-value="'/base/static/img/avatar_grey.png'"/>
                                <div class="o_kanban_image_fill_left o_kanban_image_full" t-attf-style="background-image: url(#{kanban_image('composer', 'portrait', record.id.raw_value, placeholder)})" role="img"/>

                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title oe_partner_heading"><field name="display_name"/></strong>
                                    <div class="o_kanban_tags_section oe_kanban_partner_categories"/>
                                    <ul>
                                        <li><field name="birth" options='{"format": "yyyy"}'/> - <field name="death" options='{"format": "yyyy"}'/></li>
                                        <li t-if="record.work_count"><field name="work_count"/> works</li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="composer_action" model="ir.actions.act_window">
            <field name="name">Composers</field>
            <field name="res_model">composer</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,form,tree</field>
        </record>


        <record id="oo_get_composers_action" model="ir.actions.server">
            <field name="name">Ask OpenOpus for composers</field>
            <field name="model_id" ref="music_library.model_composer"/>
            <field name="binding_model_id" ref="music_library.model_composer"/>
            <field name="state">code</field>
            <field name="code">action = model.action_oo_get_composers()</field>
        </record>

        <record id="oo_get_works_action" model="ir.actions.server">
            <field name="name">Ask OpenOpus for works</field>
            <field name="model_id" ref="music_library.model_composer"/>
            <field name="binding_model_id" ref="music_library.model_composer"/>
            <field name="state">code</field>
            <field name="code">action = records.action_oo_get_works()</field>
        </record>

        <record id="oo_get_portrait" model="ir.actions.server">
            <field name="name">Get OpenOpus portrait</field>
            <field name="model_id" ref="music_library.model_composer"/>
            <field name="binding_model_id" ref="music_library.model_composer"/>
            <field name="state">code</field>
            <field name="code">action = records.action_oo_get_portrait()</field>
        </record>

    </data>
</odoo>
