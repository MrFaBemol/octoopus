<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="layout" inherit_id="web.layout">
            <xpath expr="//head/meta[last()]" position="after">
                <link href="https://fonts.googleapis.com/css2?family=Lora&amp;family=Montserrat&amp;display=swap" rel="stylesheet"/>
            </xpath>
        </template>


        <template id="header_template" inherit_id="web.frontend_layout" name="Header template" active="True">
            <xpath expr="//header" position="replace">
                <header>
                    <div class="oo_header_logo">
                        <a href="/"><img src="/theme_still_alive/static/img/logo.png"/></a>
                    </div>
                    <!--   Instead of calling website.navbar because of the weird classes / _navbar_expand_class  -->
                    <nav data-name="Navbar" t-attf-class="oo_navbar">
                        <a href="/what/composers/" title="Composers">Composers</a>
                        <a href="/what/works/" title="Works">Works</a>
                        <a href="/web/login/" class="btn-login">Log in</a>
                    </nav>

                    <!--                    Todo: add a mobile navbar-->
                    <!--                    <i class="fa fa-bars menu-sm" />-->

                </header>
            </xpath>


            <xpath expr="//footer" position="replace">

                <!-- Footer -->
                <footer class="page-footer font-small blue pt-4">
                    <div class="container-fluid text-center text-md-left">
                        <div class="row">
                            <div class="col-md-6 mt-md-0 mt-3">
                                <h5 class="text-uppercase">Hello!</h5>
                                <p>That page content must have been very interesting if you are here!</p>
                            </div>

                            <hr class="clearfix w-100 d-md-none pb-3" />

                            <div class="col-md-3 mb-md-0 mb-3">
                                <h5 class="text-uppercase">Links</h5>
                                <ul class="list-unstyled">
                                    <li><a href="#!">Composers</a></li>
                                    <li><a href="#!">Works</a></li>
                                    <li><a href="#!">Instruments</a></li>
                                </ul>
                            </div>

                            <div class="col-md-3 mb-md-0 mb-3">
                                <h5 class="text-uppercase">Infos</h5>
                                <ul class="list-unstyled">
                                    <li><a href="#!">About us</a></li>
                                    <li><a href="#!">FAQ</a></li>
                                    <li><a href="#!">Contact</a></li>
                                    <li><a href="#!">Privacy &amp; Terms</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>

                    <div class="footer-copyright text-center py-3">Â© 2022 Copyright:
                        <a href="/"> Octoopus.org</a>
                    </div>
                </footer>
            </xpath>


        </template>

    </data>
</odoo>
